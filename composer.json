{
    "name": "jlaswell/vcr",
    "description": "A simple VCR-like HTTP recording and replay library for Guzzle",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "guzzlehttp/guzzle": "^7.9",
        "symfony/yaml": "^7.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.4",
        "phpstan/phpstan": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Jlaswell\\VCR\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Jlaswell\\VCR\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "John Laswell",
            "email": "john.n.laswell@gmail.com"
        }
    ],
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
